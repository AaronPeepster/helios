#!/bin/bash -e
dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [[ -e "$dir/../../helios-service" ]]; then
    jar="$(ls -t $dir/../target/helios-service*.jar | grep -v sources | grep -v javadoc | head -n 1)"
    jar="$(cd $(dirname $jar) && pwd -P)/$(basename $jar)"
    echo "running in helios project, using $jar" 1>&2
else
    jar="/usr/share/java/spotify-helios-service.jar"
fi

exec java \
    -Djava.net.preferIPv4Stack=true \
    -jar "$jar" \
    "$@"
